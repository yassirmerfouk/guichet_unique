<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
	<display-name>Guichet</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>FrontController</servlet-name>
		<servlet-class>com.library.FrontController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FrontController</servlet-name>
		<url-pattern>*.asp</url-pattern>
	</servlet-mapping>
	<context-param>
		<param-name>APP_PATH</param-name>
		<param-value>/Guichet/</param-value>
	</context-param>
	<context-param>
		<param-name>STYLES_PATH</param-name>
		<param-value>/Guichet/assets/</param-value>
	</context-param>
	<context-param>
		<param-name>INCLUDES_PATH</param-name>
		<param-value>/Guichet/WEB-INF/app/includes/</param-value>
	</context-param>
</web-app>